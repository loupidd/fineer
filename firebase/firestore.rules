rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/pegawai/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isValidTimestamp(timestamp) {
      return timestamp is timestamp;
    }
    
    match /pegawai/{userId} {
      // Read: User can read own data, admin can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Create: Only admin can create new employees
      allow create: if isAdmin();
      
      // Update: User can only update position/address, admin can update all
      allow update: if (isOwner(userId) && 
                       request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['position', 'address'])) || 
                       isAdmin();
      
      // Delete: Only admin
      allow delete: if isAdmin();
      
      // Presence subcollection
      match /presence/{docId} {
        allow read: if isOwner(userId) || isAdmin();
        
        allow create, update: if isOwner(userId) && 
                                 isValidTimestamp(request.resource.data.date);
        
        // No one can delete presence records
        allow delete: if false;
      }
      
      // Suspicious activities subcollection
      match /suspicious_activities/{activityId} {
        // Only admins can read
        allow read: if isAdmin();
        
        // System can write (authenticated users can log their own)
        allow create: if isOwner(userId);
        
        // No updates or deletes
        allow update, delete: if false;
      }
    }
  }
}